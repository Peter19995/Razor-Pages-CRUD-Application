@page
@model JoyWeb.Pages.Categories.DeleteCategory
<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pb-3">
                Edit Category
            </h2>
            <hr />
        </div>
       
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" disabled class="form-control" />
           
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="@Model.Category.DisplayOrder" disabled class="form-control" />
           
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a class="btn btn-primary mx-2" asp-page="Index">
            Back To List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
